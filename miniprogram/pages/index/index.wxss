
.map{
  width: 100%;
  height: 100%;
  position: fixed;
  top:250rpx;
  z-index: 9;
}

.center_point{
  position:fixed;
  top:44%;
  left: 50%;
  z-index: 9;
  width: 70rpx;
  height: 70rpx;
}

.order_panel{
  position: fixed;
  bottom: 0;
  width: 80%;
  padding: 20rpx 10%;
  background-color: white;
  border: 1rpx solid black;
  z-index: 9;
}
.panel_header{
  justify-content: space-around;
  border: 1rpx solid red;
}
.panel_header>view{
  width: 150rpx;
  padding: 10rpx 30rpx;
  border: 1rpx solid black;
  text-align: center;
}

.body_item{
  padding: 20rpx;
  width: 100%;
}
.body_item>image{
  width: 40rpx;
  height: 40rpx;
}
.body_item>image:nth-child(3),
.body_item>text:nth-child(4),
.body_item>picker:nth-child(4){
  float:right;
}

